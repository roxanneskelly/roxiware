<section class="account_edit">
<h2>Edit <%= @user.username %></h2>
<%= form_for(@user,  :url=>roxiware.edit_self_path, :method=>:put) do |f| %>
  <div class="left last">
    <div class="span-12 last"><%= f.label :email, :class=>"span-3"%>
      <%= f.text_field :email,:class=>"span-5" %></div>
    <div class="span-12 last"><%= f.label :password,  :class=>"span-3"%>
      <%= f.password_field :password, :class=>"span-5" %></div>
    <div class="span-12 last "><%= f.label :password_confirmation, :class=>"span-3"%>
      <%= f.password_field :password_confirmation, :class=>"span-5" %></div>
    <div class="span-12 last"><%= f.submit "Save" %></div>
  </div>
<% end %>
<div class="clear"/>
</section>
