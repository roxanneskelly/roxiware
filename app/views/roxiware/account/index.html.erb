<section class="accounts">
  <h2>Users</h2>
  <table>
    <tr>
       <th class="account_controls">&nbsp;</th>
       <th class="account_role">Role</th>
       <th class="account_username">Username</th>
       <th class="account_name">Name</th>
       <th class="">Email</th>
     </tr>

    <% @users.each() do |user| %>
      <% if can? :read, user %>
        <tr>
          <td class="account_controls">
            <% if can? :edit, user %>
              <%= button_tag "Edit", :id=>"edit-account-#{user.id}", :class=>"account_edit button_edit", :type=>"button"  %>
            <% end %>
            <% if can? :delete, user %>
              <%= button_tag "Delete", :id=>"delete-account-#{user.id}", :class=>"account_delete button_delete", :type=>"button" %>
            <% end %>
          </td>
          <td class="account_role"><%= user.role %></td>
          <td class="account_username"><%= user.username %></td>
          <td class="account_full_name"><%= user.full_name %></td>
          <td class="account_email"><%= user.email %></td>
        </tr>
      <% end %>
    <% end %>
    <% if can? :create, Roxiware::User %>
      <tr>
        <td>
          <%= button_tag "Add", :id=>"edit-account-new", :class=>"account_edit button_add", :type=>"button", :rel=>"#overlay_account" %>
	</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
      </tr>
    <% end %>
  </table>
</section>
