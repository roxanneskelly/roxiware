<% if @book.present? %>
  <section>
<div class="book_listing" rel="<%= book_path(@book.id)%>" id="<%= @book.seo_index %>">
     <%= render :partial=>"roxiware/books/book", :locals=>{:book=>@book, :book_image_url=>@book.large_image_url, :book_description_length=>0} %>
  </section>
<% end %>
<% if can? :edit, @book %>
    <div class="help_bar_entry">Left-click to manage the book.</div>
    <%= render :partial=>"roxiware/books/context_menus" %>
<% end %>
