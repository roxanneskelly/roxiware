<div class="gallery_item_edit_overlay overlay" id="gallery_item_edit_overlay">
  <%= form_tag do%>
    <div class="span-10">
      <div class="left last"><%= label_tag :person_id, "Artist", :class=>"span-2 left"%>
	  
	  <%= select_tag(:person_id, options_from_collection_for_select(Roxiware::Person.all, :id, :full_name ))%> 
      </div>
      <div class="left last">
	   <%= label_tag :name, "Name:", :class=>"span-2 left"%>
           <%= text_field_tag :name, nil, :class=>"span-6 last" %>
      </div>
      <div class="left last">
	   <%= label_tag :medium, "Medium:", :class=>"span-2 left"%>
           <%= text_field_tag :medium, nil, :class=>"span-6 last" %>
      </div>
    </div>
    <div class="span-3 last upload_target">Upload Image
      <input type="hidden" name="image_url" class="gallery_item_image"/>
      <input type="hidden" name="thumbnail_url" class="gallery_item_thumbnail"/>
      <img name="image_url" id="overlay_image" class="gallery_item_thumbnail"/>
    </div>
    <div><%= text_area_tag :description, nil, :class=>"popup_wysiwyg span-16 bio_content" %></div>
  <% end %>
  <div id="save_control" class="save_button right">&nbsp;</div>
</div>

<script>
$(document).bind("ready", function() {
    console.log("binding ready");
    $("div[rel=#gallery_item_edit_overlay]").overlay( {
         closeOnClick: false,
         load: false, 
         fixed: false,
         onClose: function() { 
         },
         onBeforeLoad: function() {
            var gallery_id= this.getTrigger().attr("id").split("-")[2];
            var gallery_item_id= this.getTrigger().attr("id").split("-")[3];
            var endpoint = "/gallery/"+gallery_id + "/item";
            var method = "POST";
            if (gallery_item_id != "new") {
               endpoint = endpoint + "/" + gallery_item_id;
               method = "PUT";
            }
            $(".gallery_item_edit_overlay").popup_form(endpoint,
                  {
                    canEdit: true,
                    method: method,
                    success: function(xhr, status) {
                       window.location = "/galleries/<%= params[:gallery_seo_index] %>";
                    },
                    error: function(xhr, status) {
                      window.location = "/galleries/<%= params[:gallery_seo_index] %>";
                    }
                  });
        }
    });
   
    $(".gallery_delete_item_button").click(function(event) {
          var gallery_id= $(this).attr("id").split("-")[2];
          var gallery_item_id= $(this).attr("id").split("-")[3];
          var endpoint = "/gallery/"+gallery_id + "/item/"+gallery_item_id;
          $.ajax({
                url: endpoint,
                type: "DELETE",
                processData: false,
                complete: function(event) {
                   window.location.reload();
                   },
               });
     });      
});
</script>
