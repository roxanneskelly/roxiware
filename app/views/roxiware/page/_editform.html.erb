<div class="large_form" id="page_edit_form">
    <%= form_for @page, :method=>:put, :url=>page_path(@page.page_identifier) do |page| %> 
      <%= page.hidden_field :page_type %>
      <div class="content_pos"><div class="settings_wysiwyg"><%= page.text_area :content, :class=>"settings_wysiwyg" %></div></div>
      <%= button_tag "Save", :id=>"save_button", :value=>"save", :type=>"submit", :class=>"save_button" %></div>
    <% end %>
</div>
<script>
   $(function() {
      $("button#save_button").click(function(e) {
          console.log("click");
          e.preventDefault();
          $.ajaxSetParamsJSON("<%= page_path(@page.page_identifier) %>.json", 
                              $("#page_edit_form form").serializeArray(), 
                              {form:$("#page_edit_form form"),
                               method:"put",
                               success: function() {
                                   window.location.reload();
                               }}); 
      });
   });
</script>
