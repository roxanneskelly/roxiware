<div class="page_edit_overlay popup_form overlay" id="page_edit_overlay">
  <%= form_tag("/") do %>
      <%= text_area_tag :content, nil, :class=>"popup_wysiwyg page_edit_content" %>
      <br/>
      <%= button_tag "Save", :id=>"save_button", :type=>"button next_form_line" %>
  <% end %>
</div>
<script>
$(document).bind("ready", function() {

    $("div.page_edit_button[rel]").overlay( {
         onClose: function() { 
         },
         target: '#page_edit_overlay',
         onBeforeLoad: function() {
            var page_type = this.getTrigger().attr("id").split("-")[1];
            var endpoint = "/page/"+page_type;
            var method = "PUT";
            $(".page_edit_overlay").popup_form(endpoint,
                  {
                    canEdit: true,
                    method: method,
                    complete: function(xhr, status) {
                       window.location.reload();
                    }
                  });
        }
    });
});
</script>

