<div class="person_overlay overlay" id="person_edit_overlay">
  <%= form_tag do%>
    <div class="span-9">
      <div class="left last"><%= label_tag :show_in_directory, "Show In Directory", :class=>"span-6 left"%>
	<%= check_box_tag :show_in_directory %></div>
      <div class="left last"><%= label_tag :name, "Name:", :class=>"span-2 left"%>
           <%= text_field_tag :first_name, nil, :class=>"span-3 last" %>
           <%= text_field_tag :last_name, nil, :class=>"span-3 last" %></div>
      <div class="left last"><%= label_tag :role, "Role:", :class=>"span-2 left"%>
           <%= text_field_tag :role, nil, :class=>"span-6 last" %></div>
      <div class="left last"><%= label_tag :email, "Email:", :class=>"span-2 left"%>
           <%= text_field_tag :email, nil, :class=>"span-6 last" %></div>
      <div class="left last"><%= label_tag :website, "Website:", :class=>"span-2 left"%>
           <%= text_field_tag :website, nil, :class=>"span-6 last" %></div>
      <div class="left last"><%= label_tag :twitter, "Twitter", :class=>"span-2 left"%>
           <%= text_field_tag :twitter, nil, :class=>"span-6 last" %></div>
      <div class="left last"><%= label_tag :facebook, "Facebook", :class=>"span-2 left"%>
           <%= text_field_tag :facebook, nil, :class=>"span-6 last" %></div>
      <div class="left last"><%= label_tag :google, "Google+", :class=>"span-2 left"%>
           <%= text_field_tag :google, nil, :class=>"span-6 last" %></div>
    </div>
    <div class="span-5 last upload_target">
      Upload Image
      <input type="hidden" name="image_url" class="person_portrait"/>
      <input type="hidden" name="thumbnail_url" class="person_thumbnail"/>
      <img name="image_url" id="overlay_image" class="person_portrait"/>
    </div>
    <div><%= text_area_tag :bio, nil, :class=>"popup_wysiwyg span-16 bio_content" %></div>
  <% end %>
  <div id="save_control" class="save_button right">&nbsp;</div>
</div>
<script>
$(document).bind("ready", function() {
    console.log("binding ready");
    $("div[rel=#person_edit_overlay]").overlay( {
         onClose: function() { 
         },
         onBeforeLoad: function() {
            console.log("before load");
            var person_id= this.getTrigger().attr("id").split("-")[2];
            var endpoint = "/person";
            var method = "POST";
            if (person_id != "new") {
               endpoint = endpoint + "/" + person_id;
               method = "PUT";
            }
            $(".person_overlay").popup_form(endpoint,
                  {
                    canEdit: true,
                    method: method,
                    success: function(xhr, status) {
                       window.location.reload();
                    },
                    error: function(xhr, status) {
                      window.location.reload();
                    }
                  });
        }
    });
   
       $(".person_delete_button").click(function(event) {
          var person = $(this).attr("id").split("-")[2];
          endpoint = "/person/"+person + ".json";
          $.ajax({
                url: endpoint,
                type: "DELETE",
                processData: false,
                complete: function(event) {
                   window.location="/people"
                   },
               });
       });      
});
</script>
