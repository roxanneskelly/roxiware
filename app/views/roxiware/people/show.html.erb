<% if @person.present? %>
  <section><article class="person_listing" rel="<%= person_path(@person.id) %>">
    <div class="social_network_icons">
      <% website = nil
       @person.social_networks.each do |network| %>
       <% if network.network_type != "website" %>
          <%= link_to network.network_url, {:target=>"blank", :class=>"social_network_link"} do %>
             <%= image_tag("icons/social_networking/"+network.network_type+".png", :class=>"social_network_icon") %>
          <% end %>
       <% else 
         website = network.network_url   
       end %>
      <% end %>
    </div>
    <img src="<%= @person.large_image_url %>" class="person_portrait"/>
    <div>
     <div class="person_name"><%= @person.full_name %></div>
     <% if !@person.role.blank? %><div class="person_role">, <%= @person.role %></div><% end %>
     <% if !@person.email.nil? && @person.email != ""%>
      <div><address><a href="mailto:<%= @person.email %>"><%= @person.email %></a></address></div>
     <% end %>
    </div>
    <% if !website.nil? %>
       <div class="person_website"><%= link_to website, website %> </div>
    <% end %>
    <div class="person_bio"><%= raw @person.bio %>
    <div style="clear:both"></div>
  </article></section>
   <% if (can? :edit, @person)  %>
     <ul id="blog_index_application_menu" class="application_menu"><li><a rel="<%= edit_person_path(@person.id) %>" form="Edit Biography">Edit Biography</a></li></ul>
     <%= render :partial=>"roxiware/people/context_menus" %>
   <% end %>
<% end %>
