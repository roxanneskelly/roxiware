
<style>
#section_layout_edit {
  width:45em;
}

#section_layout_edit label
{
  width: 7em;
}

#section_layout_edit .panes
{
 width: 100%;
 color:#000;
}

#section_layout_edit .panes > div
{
 height: 30em;
}

#section_layout_edit textarea.section_layout_style
{
  width:100%;
  height:36em;
  padding:0px;
  margin:0px;
}

</style>

<div class="section_layout_edit" id="section_layout_edit">
   <%= form_tag(layout_page_section_path(@layout.guid, url_encode(@page.get_url_identifier), @section.name), :method=>"put") do%>
     <ul class="tabs">
       <% if @section.get_param_objs.present? %> 
          <li><a href="#">Settings</a></li>
       <% end %>
       <li><a href="#">Style</a></li>
     </ul>
     <div class="panes">
       <% if @section.get_param_objs.present? %> 
	  <div>
	     <%= fields_for :params do |param_field_block| %>
		<%= param_fields(param_field_block, @section.get_param_objs) %>
	     <% end %>
	     <%= button_tag "Save", :id=>"save_button", :class=>"save_button", :type=>"submit" %>
	  </div>
       <% end %>
       <div>
          <%= text_area_tag :style, @section.style, :class=>"section_layout_style" %>
          <%= button_tag "Save", :id=>"save_button", :class=>"save_button", :type=>"submit" %>
       </div>
     </div>
      
   <% end %>
</div>
<script>
   $(function() {
      $("#section_layout_edit").find("ul.tabs").tabs($("div.panes > div"));
      $("#section_layout_edit").find("button").button().click(function() {
         
      });
   });
</script>
