<meta content="text/html; charseUTF-8" http-equiv="Content-Type">
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=2, user-scalable = yes" />
<meta name="generator" content="roxiware">
<meta name="description" content="<%= @meta_description %>"/>
<meta name="keywords" content="<%= @meta_keywords %>"/>
<% if @robots.present? %>
  <meta name="robots" content="<%= @robots %>" />
<% end %>
<meta name="google-site-verification" content="<%= @google_site_verification_key %>" />
<title><%= @title %></title>
<style type="text/css" id="template-css"><%= @layout_styles %></style>
<%= stylesheet_link_tag    "application" %>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<script src="http://cdn.jquerytools.org/1.2.7/full/jquery.tools.min.js"></script>
<%= javascript_include_tag "application" %>
<!--[if lt IE 9]> 
<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script> 
<![endif]-->

<%= csrf_meta_tags %>
<%= favicon_link_tag "/assets/icons/favicon.ico"%>
<%= render :partial=>'roxiware/layouts/ga' %>

<% if can? :edit, Roxiware::Layout::WidgetInstance %>
   <ul id="widget_context_menu" class="context_menu">
     <li id="widget_settings"><a href="#" menu_item="widget_settings" class="settings_link">Widget Settings</a></li>
     <% if can? :delete, Roxiware::Layout::WidgetInstance %>
        <li id="delete_widget"><a href="#" menu_item="widget_delete" class="widget_instance_delete">Delete Widget</a></li>
     <% end %>
   </ul>
<% end %>
<% if can? :edit, Roxiware::Layout::LayoutSection %>
   <ul id="section_context_menu" class="context_menu">
         <li id="section_settings"><a href="#" id="section_settings" menu_item="section_settings" class="settings_link">Section Settings</a></li>
     </ul>
<% end %>
<% if can? :edit, @page_layout %>
   <ul id="page_context_menu" class="context_menu">
       <li id="page_settings"><a href="#" id="page_settings" menu_item="page_settings" class="settings_link">Page Settings</a></li>
    </ul>
<% end %>
