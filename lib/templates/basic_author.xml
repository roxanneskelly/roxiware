  <style>
    <![CDATA[/* Document layout */
/* NOTE: Be careful when adding styles to the application body.  Management controls, dialogs and such are contained within.
    It's better to apply styles to the #mainBody which only contains client website content */
body.application_body
{
  background: <%= background %>;
}

/* Sizing for various devices */
div#mainBody {
     font-size:12px;
     width:750px;
}

/* for all mobile devices, set width to 100% */
@media all and (max-device-width: 1024px) {
      div#mainBody {
          border:solid 1px black;
          position:absolute;
          right:0px;
          left:0px;
          width:auto;
      }
}

/* Various mobile portrait guesses */
@media all and (min-device-height: 320px) and (orientation:portrait) {
      div#mainBody {
          min-height:300px;
           font-size:8px;
           left:20px;
      }
}

@media all and (min-device-height: 480px) and (orientation:portrait) {
      div#mainBody {
          min-height:450px;
      }
}

@media all and (min-device-height: 640px) and (orientation:portrait) {
      div#mainBody {
          min-height:600px;
          left:40px;
      }
}

@media all and (device-height: 800px) and (orientation:portrait) {
      div#mainBody {
          min-height:750px;
           font-size:9px;
      }
}

@media all and (min-device-height: 1024px) and (orientation:portrait) {
      div#mainBody {
          min-height:940px;
           font-size:11px;
      }
}

@media all and (min-device-height: 1280px) and (orientation:portrait) {
      div#mainBody {
          min-height:1200px;
          font-size:12px;
      }
}

/* Landscape */
@media all and (min-device-width: 320px) and (orientation:landscape) {
      div#mainBody {
          min-height:300px;
          font-size:8px;
      }
}

@media all and (min-device-width: 480px) and (orientation:landscape) {
      div#mainBody {
          min-height:450px;
          left:20px;
      }
}


@media all and (min-device-width: 640px) and (orientation:landscape) {
      div#mainBody {
          min-height:600px;
          font-size:9px;
          left:40px;
      }
}

@media all and (min-device-width: 768px) and (orientation:landscape) {
      div#mainBody {
          min-height:680px;
      }
}

@media all and (min-device-width: 800px) and (orientation:landscape) {
      div#mainBody {
          min-height:750px;
      }
}

@media all and (min-device-width: 1024px) and (orientation:landscape) {
      div#mainBody {
          min-height:940px;
          font-size:11px;
      }
}

@media all and (device-width: 1280px) and (device-height:800px) and (orientation:landscape) {
      div#mainBody {
          min-height:1200px;
          font-size:12px;
      }
}


/* Fonts and text */
div#mainBody
{
    font-size:12px;
    font-family:Geneva, Verdana, Arial, Helvetica, sans-serif;

    padding-left: 10px;
    padding-right: 10px;
    margin:0px auto 20px auto;
    background: <%= background %>;
    color:<%= text_color %>;

    h1, h2, h3, h4, h5, h6 {
	font-family:Georgia, serif;
	color:<%= text_color %>;
    }

    h1 {font-size:1.3em;line-height:1;margin-bottom:0.5em;}
    h2 {font-size:1.2em;margin-bottom:0.75em;}
    h3 {font-size:1.1em;line-height:1;margin-bottom:1em;}
    h4 {font-size:1.1em;line-height:1.25;margin-bottom:1.25em;}
    h5 {font-size:1em;font-weight:bold;margin-bottom:1.5em;}
    h6 {font-size:1em;font-weight:bold;}

    hr {
        color: <%= text_color %>;
        background: <%= text_color %>;
    }
    b {
        text-shadow:2px 2px 4px rgba(0, 0, 0, 0.7);
    }
   
    a, a:visited, a:link {
        color: <%= link_color %>;
        text-decoration:none;
        font-style:none;
        cursor:pointer;
    }

    a, a:visited, a:link, a:hover {
        color: <%= link_color %>;
    }
    a:hover {
      color: <%= link_hover_color %>;
    }
    
  .watermark {
       color:#ccc !important;
    }
    input {
        margin:0px;
        padding:1px;
    }
    label {
        padding:2px
    }

    button {
        border:none;
        background:<%= text_color %>;
        color:<%= background %>;
        border-radius:0px;
        padding:0.2em 3em 0.2em 3em;
    }
    button:hover {
        background:<%= link_color %>;
    }
}


/* General layout */
div#mainBody
{
    header {
       width:100%;
    }

    #layout_body
    {
       margin:0px;
       width:100%;
       display:block;
      
    }

    #content_section {
       display:block;
       width:100%;
       position:relative;
       min-height:400px;

        #left_bar_section {
            position:absolute;
            left:-50px;
            padding-right:10px;
            top:0px;
            bottom:0px;
            width:40px;
        }

        #center_bar {
            padding:0px 220px 0px 0px;

            position:relative;
            width:100%;
            box-sizing:border-box;
            display:inline-block;
            vertical-align:top;

            #top_bar_section {
            }

            #bottom_bar_section {
            }

            .content_background_container {
                #center_content {
                    position:relative;
                    width:100%;
                }
            }
        }

        #right_bar_section {
            position:absolute;
            width:185px;
            top:0px;
            bottom:0px;
            right:0px;
            padding:5px;
        }

    }
}



.manage_button {
    opacity:0;
    color: <%= link_color %>
}

/* Content and widget background boxes */
/* set the content background to relative so we can position the content background off of it */
div.content_background_container, .widget
{
   position:relative;
}

/* The backgrounds for the content and widget containers span the entire widget */
div.widget_background, div.content_background
{
    position:absolute;
    width:100%;
    height:100%;
    z-index:-1;
}


/* Post*/
div#mainBody .post {
    position:relative;
    margin: 0;
    width:100%;
    padding:0 0em 2em 0em;
    
    div.share_bar {
        position:absolute;
        bottom:0.5em;
        right:1em;
        > div {
            display:inline-block;
            vertical-align:middle;
            width:90px;
            height:30px;
        }
    }

    hr.post_separator {
         margin:0 10% 0 10%;
         width:80%;
    }

    .post_categories {
        display:none;
    }

    .post_title {
        position:absolute;
        top:1.0em;
        font-size:3em;
        font-family:Times New Roman,Georgia,Serif;
    }

    /* Various mobile portrait guesses */
    @media all and (min-device-height: 320px) and (orientation:portrait) {
        .post_title {
            font-size:1.5em;
            margin: 1em 0em 0.5em 0em;
        }
    }

    .post_header {
        position:absolute;
        top:0.5em;
        width:90%;
        left:5%;
        color: <%= link_color %>;
 
        .post_author_img {
            display:none;
        }
        
        .post_date {
            display:inline-block;
         }

         .post_author {
            display:inline-block;
         }
         .post_author:before {
             content:"by ";
         }

         .comments_link {
            display:inline-block;
         }
         .comments_link:before {
             content: "\00a0\00a0|\00a0\00a0";
         }
    }
    .content {
        margin-top:7em;
        margin-left:0em;
        overflow:hidden;
        width:100%;
        img {
            margin:0.5em;
        }
    }

}

.comments {
    margin-top:2em;
    .comment {

        border-top:solid 1px <%= text_color %>;
        position:relative;
        clear:both;
        margin-bottom:3em;
        .comment {
            margin-left:3em;
         }

        .comment_status_moderate {
            float:right;
            color: <%= text_alert_color %>;
            margin-right:4em;
        }
        .comment_status_publish {
              display:none;
        }

        .comment_header {
            vertical-align:top;
            color: <%= link_color %>;
           

            .comment_author_image {
               display:none;
            }

            .comment_author_name {
                display:inline-block;
                margin-right:0.5em;
                float:left;
            }
            .comment_author_date:before {
                content:"on ";
            }
            .comment_author_date {
                display:inline-block;
                margin-right:1em;
            }
        }
        .comment_footer {
            clear:both;
            text-align:center;
            .comment_reply {
                cursor:pointer;
                
            }
        }
    }
    .comment:hover {
        .manage_button {
            cursor:pointer;
            opacity:0.5;
        }
    }
}

.post:hover {
    .manage_button {
        cursor:pointer;
        opacity:0.5;
    }
}

/* Full post display with comments */
.post_listing {
    .post_footer {
        hr.post_separator {
            margin:0 10% 0 10%;
            width:80%;
        }
        .comment_count {
            font-size:1.3em;
            display:inline-block;
        }
        .pending_comment_count {
            display:inline-block;
            color: <%= text_alert_color %>;
            font-size:1.3em;
            margin-left:2em;
        }

        .comment_form {
            position:relative;
             width:100%;
            margin:2em 0 3em 0;

            label {
                width:5em;
            }
            div.comment_form_header {
                position:relative;
                width:100%;
                height:10em;
                input.comment_author, div.comment_author {
                    position:absolute;
                    top:0px;
                    left:80px;
                    right:20%;
                }
                div.comment_author {
                   font-size:1.5em;
                }
                label.comment_author {
                    position:absolute;
                    left:2em;
                    top:0px;
                }
                .comment_author_image {
                    display:none;
                } 
                textarea.comment_form_content {
                    resize:none;
                    position:absolute;
                    right:0px;
                    left:80px;
                    top:2em;
                    height:6em;   
                }
             }
             button.post_comment_button {
                    float:right;
             }
            .comment_form_footer {
                position:relative;
                width:100%;
                .comment_auth_info {
                    position:relative;
                    height:80px;
                }
                label {
                   width:5em !important;
                }
                label.comment_form_author_url {
                    position:absolute;
                    left:0px;
                    top:0px;
                } 
                input.comment_form_author_url {
                    position:absolute;
                    top:0px;
                    left:80px;
                    right:330px;
                }
                label.comment_form_author_email {
                    position:absolute;
                    top:2em;
                    left:0px;
                }
                input.comment_form_author_email {
                    position:absolute;
                    top:2em;
                    left:80px;
                    right:330px;
                }
                 .recaptcha_response_field {
                      position:absolute;
                      top:4em;
                      left:80px;
                      right:330px;
                  }

                .recaptcha_image {
                    width:300px;
                    height:57px;
                    position:absolute;
                    top:0px;
                    right:20px;
                    border:solid 1px black;
                }
                .recaptcha_only_if_incorrect_sol {
                     position:absolute;
                     top:60px;
                     right:1em;
                 }

                  .captcha_reload, .captcha_audio, .captcha_image, .captcha_help {
                      font-size:17px;
                      font-family: 'Metro Icons';
                      speak: none;
                      font-weight: normal;
                      font-variant: normal;
                      text-transform: none;
                      line-height: 1;
                       -webkit-font-smoothing: antialiased;
                      color: <%= link_color %>;
                      position:absolute;
                      right:0px;            
                      width:19px;
                      height:19px;
                      cursor:pointer;
                  }
                  .captcha_reload:hover, .captcha_audio:hover, .captcha_image:hover, .captcha_help:hover {
                      color: <%= link_hover_color %>;
                  }
                  .captcha_reload {
                        top:0px;
                   }
                   .captcha_reload:before {
                       content: "\e070";
                   }
                   .captcha_audio {
                        top:20px;
                    }
                   .captcha_audio:before {
                        content: "\e067";
                    }

                    .captcha_image {
                        top:20px;
                    }
                    .captcha_image:before {
                        content: "\e0b5";
                    }

                    .captcha_help {
                        top:40px;
                    }
                    .captcha_help:before {
                        content: "\e056";
                    }
                
            }
        }
    }
}

.page_content, .person_listing {
    .manage_button {
        position:absolute;
        top:0px;
        right:0px;
        cursor:pointer;
        opacity:0.5;
    }
}


.series_listing {

    clear:both;
    position:relative;
    border-top:solid 1px <%= text_color %>;
    padding:1em;

   margin:1em 0 2em 0;
   width:100%;
   a.series_link {
      div.series_title {
           font-size:1.5em;
       }
   }

   div.series_books {
       margin:1em 0em 0em 3em;
       .series_book_titles {
           .series_book_title {
               display:block;
           }
       }
   }
}


div.book_listing {
    clear:both;
    position:relative;
    border-top:solid 1px <%= text_color %>;
    padding:1em;
    a {
        .book_title {
             font-size:1.3em;
             margin:0 0 1em 0;
        }
        img {
            float:left;
            margin:1em 2em 2em 0;
        }
     }
}


.bookstore_list {
     float:right;
         ul {
          list-style-type:none;
         li.book_store {
              display:inline-block;
              a.store_link {
                  width:32px;
                  height:32px;
                  display:inline-block;
                  div.store_name {
                      display:none;
                  }
              }
             <% %w(sony amazon kobo barnsandnoble).each do |store| %>
                 a.store_link_<%= store %>{
                     background:url('<%= CGI::unescape cdn_icon("#{store}_32", "clean", asset_color_scheme.to_s) %>') no-repeat center;
                } 
            <% end %>   
             <% %w(sony amazon kobo barnsandnoble).each do |store| %>
                 a.store_link_<%= store %>:hover{
                     background:url('<%= CGI::unescape cdn_icon("#{store}_32", "clean", active_asset_color_scheme.to_s) %>') no-repeat center;
                } 
            <% end %>   
       }
    }
}

.person_listing {
    .social_network_icons {
        display:none;
    }

    .person_portrait {
        float:right;
        margin:1em 0 2em 2em;
        padding:0.5em;
        border:solid 1px black;

    }
    .person_name {
        font-size:2em;
    }
}


/* Events */
section.events {
   margin-top:2em;
   div.events_title {
      font-size:2.0em;
   }
   div.events_title:before{
      content: "Calendar";
   }
   div.event {
        position:relative;
        border-top:solid 1px <%= text_color %>;
       margin:0em 0em 2em 1em;
       padding:1em 0em 0em 0em;
       .event_title {
           font-weight:900;
           font-size:1.5em;
           margin-bottom:0.5em;
       }
       .event_date_range {
           font-size:1.3em;
           font-weight:800;
           margin-left:1em;
       }
       .event_start_time {
           margin-left:1em;
           font-weight:800;
       }
       .event_location {
           margin-left:2em;
           font-weight:800;
       }
       .event_description {
           margin-left:2em;
       }
   }
   .event:hover {
       .manage_button {
           cursor:pointer;
            opacity:0.5;
        }
    }
}

/* WIDGETS */
.widget {
    width:100%;
    margin:0px;

    .widget_content {
        margin:0px;
        padding:0px;
        position:relative;

        .widget_content h1 {
            font-size:1.2em;
            font-weight:700;
        }
    }
}

/* Individual widget settings */

#left_bar_section {
    .widget#social_networks_header {
         margin-top:0px;

         .widget_content {
             text-align:right;
             .social_networks_icon {
                 padding-bottom:5px;
                 display:block;
             }
         }
    }
}
#header_bar_section {
    position:relative;
    margin:0 0 3em 0;

    .widget#logo_bar {
        position:relative;
        width:20%;
        height:150px;
        .display_item:nth-child(0) {
              display:none;
         }
    }


    .widget#login_bar {
        position:absolute;
        right:0px;
        top:0px;
        height:2em;
        padding:0.2em;
        width:100%;
        .widget_content {
           text-align:right;
       }
    }

    .widget#book_bar {
         position:absolute;
         right:0px;
         top:2em;
         display:inline-block;
         width:auto;
        .book_list {
            vertical-align:top;
            float:right;
            .book_list_book {
                vertical-align:top;
                line-height:auto;
                .book_list_book_title {
                    line-height:auto;
                    display:none;
                }
                .book_list_book_cover {
                     width:100px;
                     height:150px;
                     border: solid 1px black;
                 }
            }
        }
    }


    /* Main Menu layout */
    .widget#main_menu { 
        position:relative;
        .ddsmoothmenu_widget {
            font: Verdana;
            margin-left:auto;
            margin-right:auto;

            display:inline-block;
            height:1.5em;
            ul {
                list-style-type:none;
                display:inline-block;
                li { 
                   display:inline-block;
                   vertical-align:middle;
                   text-align:center;
                   padding:0px;

                   a, a:link, a:visited {
                       color: <%= text_color %>;
	               background: none;
                       display:inline-block;
                       padding:0 0.5em 0 0.5em;
                       text-decoration:none;
                       width:auto;
                       font-size:1.2em;
                       line-height:1.5em;
                   }

	           a.menu_selected,
	           ul li a.menu_selected {
  	               color: <%= link_color %>;
	           }

                   a:hover, a.selected, ul li a:hover   {
	               color: <%= link_color %>
                   }
       
                   ul {
                      padding-right:0px;
                      position: absolute;
                      left:0;
                      display: none;
                      visibility: hidden;
                      width: auto;
                      li {
                          width:100%;
                          padding-bottom:0px;
                          display: list-item;
                          margin:0;
                          height:auto;
                          border:none;
                          a {
                              padding-top:0.5em;
                              padding-bottom:0.5em;
                              margin:0em;
                          }
                      }
                  }
              }
          }
      }
  }
}

#header_bar_section {
    .widget#book_bar {
         position:absolute;
         right:0px;
         top:2em;
        .book_list {
            float:right;
            .book_list_book {
                .book_list_book_title {
                    display:none;
                }
                .book_list_book_cover {
                     width:100px;
                     height:150px;
                 }
            }
        }
    }
}

#right_bar_section {
    .widget#events_widget {
        .events_widget_title:before {
            content: "Calendar"
        }
        .events_widget_title {
            font-size:1.3em;
        }

        .events_widget_all_events {
            border-top:solid 1px <%= text_color %>;
            margin-top:0em;
            padding-top:1em;
         }
         .events_widget_all_events:before {
             content: "More >"
         }

        .event_widget_event {
            border-top:solid 1px <%= text_color %>;
            margin-top:0em;
            padding-top:1em;
            padding-bottom:2em;
            .event_widget_title {
               font-size:1.0em;
               font-weight:900;
            }
            .event_widget_date, .event_widget_city, .event_widget_location {
                font-size:0.8em;
                margin-left:1em;
            }
        }
    }
}
/* Social networking icons */
a.social_networks_icon {
     font-size:16px;
     display:inline-block;
        font-family: 'Metro Icons';
        speak: none;
        font-style: normal;
        font-weight: normal;
        font-variant: normal;
        text-transform: none;
        line-height: 1;
        -webkit-font-smoothing: antialiased;
}

