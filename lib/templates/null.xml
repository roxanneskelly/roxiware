  <style>
    <![CDATA[/* Document layout */
/* NOTE: Be careful when adding styles to the application body.  Management controls, dialogs and such are contained within.
    It's better to apply styles to the #mainBody which only contains client website content */
body.application_body
{
  background: <%= background %>;
}


/* Fonts and text */
div#mainBody
{
     border:solid 1px black;
    font-size:12px;
    font-family:Geneva, Verdana, Arial, Helvetica, sans-serif;

    padding-left: 10px;
    padding-right: 10px;
    margin:0px auto 20px auto;
    background: <%= background %>;
    color:<%= text_color %>;

    h1, h2, h3, h4, h5, h6 {
	font-family:Georgia, serif;
	color:<%= text_color %>;
    }

    h1 {font-size:1.3em;line-height:1;margin-bottom:0.5em;}
    h2 {font-size:1.2em;margin-bottom:0.75em;}
    h3 {font-size:1.1em;line-height:1;margin-bottom:1em;}
    h4 {font-size:1.1em;line-height:1.25;margin-bottom:1.25em;}
    h5 {font-size:1em;font-weight:bold;margin-bottom:1.5em;}
    h6 {font-size:1em;font-weight:bold;}

    b {
        text-shadow:2px 2px 4px rgba(0, 0, 0, 0.7);
    }
   
    a, a:visited, a:link {
        color: <%= link_color %>;
        text-decoration:none;
        font-style:none;
    }

    a, a:visited, a:link, a:hover {
        color: <%= link_color %>;
    }
    a:hover {
      color: <%= link_hover_color %>;
    }
}


/* General layout */
div#mainBody
{

    header {
       width:100%;
    }

    #layout_body
    {
       margin:0px;
       width:100%;
       display:table;
    }

    #content_section {
       display:table-row;
    }

    #left_bar_section, #right_bar_section, #center_bar
    {
       position:relative;
       display:table-cell;
       vertical-align:top;
       margin:0px;
    }

    #center_content
    {
       position:relative;
       padding:10px;
       width:100%;
    }
}


/* Sizing for various devices */
div#mainBody {
     width:900px;
     font-size:12px;
}

/* for all mobile devices, set width to 100% */
@media all and (max-device-width: 1024px) {
      div#mainBody {
          width:100%;
      }
}

/* Various mobile portrait guesses */
@media all and (min-device-height: 320px) and (orientation:portrait) {
      div#mainBody {
          min-height:300px;
           font-size:8px;
      }
}

@media all and (min-device-height: 480px) and (orientation:portrait) {
      div#mainBody {
          min-height:450px;
      }
}

@media all and (min-device-height: 640px) and (orientation:portrait) {
      div#mainBody {
          min-height:600px;
      }
}

@media all and (device-height: 800px) and (orientation:portrait) {
      div#mainBody {
          min-height:750px;
           font-size:9px;
      }
}

@media all and (min-device-height: 1024px) and (orientation:portrait) {
      div#mainBody {
          min-height:940px;
           font-size:11px;
      }
}

@media all and (min-device-height: 1280px) and (orientation:portrait) {
      div#mainBody {
          min-height:1200px;
          font-size:12px;
      }
}

/* Landscape */
@media all and (min-device-width: 320px) and (orientation:landscape) {
      div#mainBody {
          min-height:300px;
          font-size:8px;
      }
}

@media all and (min-device-width: 480px) and (orientation:landscape) {
      div#mainBody {
          min-height:450px;
      }
}

@media all and (min-device-width: 640px) and (orientation:landscape) {
      div#mainBody {
          min-height:600px;
          font-size:9px;
      }
}

@media all and (min-device-width: 768px) and (orientation:landscape) {
      div#mainBody {
          min-height:680px;
      }
}

@media all and (min-device-width: 800px) and (orientation:landscape) {
      div#mainBody {
          min-height:750px;
          font-size:10px;
      }
}

@media all and (min-device-width: 1024px) and (orientation:landscape) {
      div#mainBody {
          min-height:940px;
          font-size:11px;
      }
}

@media all and (device-width: 1280px) and (device-height:800px) and (orientation:landscape) {
      div#mainBody {
          min-height:1200px;
          font-size:12px;
      }
}


/* Content and widget background boxes */
/* set the content background to relative so we can position the content background off of it */
div.content_background_container, .widget
{
   position:relative;
}

/* The backgrounds for the content and widget containers span the entire widget */
div.widget_background, div.content_background
{
    position:absolute;
    width:100%;
    height:100%;
    z-index:-1;
}

/* WIDGETS */
.widget
{
    width:100%;
    margin:0px;

    .widget_content {
        margin:0px;
        padding:0px;
        position:relative;

        .widget_content h1 {
            font-size:1.2em;
            font-weight:700;
        }
    }
}


.series_listing {
   border:solid 1px white;
   clear:both;
   margin:1em 0 2em 0;
   width:100%;
   a.series_link {
      div.series_title {
       }
   }

   div.series_books {
       vertical-align:top;
       clear:both;
       overflow:hidden;
       margin-left:0px;
       margin-right:0px;
       border:solid 1px white;

       div.series_book_tab:hover {
	  background:#444;
       }
       div.series_book_tab {
          cursor:pointer;
	  background:#333;
	  border:solid 1px white;
	  float:left;
	  width:1.5em;
	  position:relative;
	  display:inline-block;
          vertical-align:middle;
          text-align:middle;
	  div.series_book_title {
              position:relative;
              left:-9em;
              top:9em;
              text-align:left;
	      height:1em;
              font-size:0.8em;
              line-height:1.5em;
	      width:20em;
	      color:#fff;
	      display:inline-block;
	      -webkit-transform: rotate(-90deg);
	      -moz-transform: rotate(-90deg);
	      -ms-transform: rotate(-90deg);
	      -o-transform: rotate(-90deg);
	      filter: progid:DXImageTransform.Microsoft.BasicImage(rotation=3);
	      transform: rotate(-90deg);
	  }
      }

       div.book_pane {
           display:none;
           float:left;
	   div.book_listing {
               position:relative;
	       overflow:hidden;
	       background:#000;
	       color:#fff;
	       display:inline-block;
	       img {
	           float:left;
                   padding:20px;
	       }
          }
      }
  }
}


.book_listings {
      div.book_listing {
          position:relative;
          border:solid 1px white;
          background:#000;
	  color:#fff;
          margin:1em;
      }
      .bookstore_list {
          padding-top:1em;
      }
}


div.book_listing {
    clear:both;
    img {
       float:left;
       padding:20px;
     }
}

.bookstore_list {
      ul.book_purchase_bar {
          list-style-type:none;
          display:hidden;
              li {
	          display:inline-block;
		  ul {
		      display:block;
		      a {
	                  display:block;
		      }
	       }
	   }
       }
       ul.book_purchase_bar:hover {
	   display:block;
       }
}


/* Individual widget settings */

.widget#login_bar {
    float:right;
    width:30%;
    display:inline-block;
   .widget_content {
       text-align:right;
   }
}

/* Main Menu layout */
.widget#main_menu { 
    width:65%;
  .ddsmoothmenu_widget {

    font: Verdana;
    margin-left:auto;
    margin-right:auto;

    display:inline-block;
    height:1.5em;
    ul {
       list-style-type:none;
       display:inline-block;

       li { 
           display:inline-block;
           vertical-align:middle;
           text-align:center;
           padding:0px;

           a, a:link, a:visited {

               color: <%= text_color %>;
	       background: none;
               display:inline-block;
               padding:0 0.5em 0 0.5em;
               text-decoration:none;
               width:auto;
               font-size:1.2em;
               line-height:1.5em;
           }

	   a.menu_selected,
	   ul li a.menu_selected {
  	       color: <%= link_color %>;
	   }

           a:hover, a.selected, ul li a:hover   {
	       color: <%= link_color %>
           }
       
           ul {
               padding-right:0px;
               position: absolute;
               left:0;
               display: none;
               visibility: hidden;
               width: auto;
               li {
                  width:100%;
                  padding-bottom:0px;
                  display: list-item;
                  margin:0;
                  height:auto;
                  border:none;
                  a {
                     padding-top:0.5em;
                     padding-bottom:0.5em;
                     margin:0em;
                  }
              }
           }
       }
     }
  }
}]]>
